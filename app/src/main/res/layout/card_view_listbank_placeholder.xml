<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layoutCardListBankPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bankPlaceholderImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#B3B3B3"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Chip"/>

        <TextView
            android:id="@+id/bankTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:text=""
            android:background="#B3B3B3"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layoutCardListBankPlaceholder"
        android:src="@drawable/linebottom"
        />

</androidx.constraintlayout.widget.ConstraintLayout>