<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutConfirmation"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/judulTextViewCardViewConfirmation"
            android:layout_marginStart="25dp"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="No meter"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/detailTextViewCardViewConfirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:text="523090778228"
            android:gravity="right"
            android:textAlignment="gravity"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutConfirmation"
        android:src="@drawable/linebottom"/>

</RelativeLayout>