<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGreen"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context=".VoucherFisikActivity">

    <RelativeLayout
        android:id="@+id/layoutVoucherFisik1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">

        <ImageButton
            android:id="@+id/backVoucherFisik"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/iconback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="34dp"
            android:text="Voucher Fisik"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cardPurchaseVoucherFisik"
        style="@style/customCardPurchases"
        android:layout_below="@id/layoutVoucherFisik1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Voucher"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/voucherImageView"
                android:layout_marginTop="3dp"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:src="@drawable/playstore"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:id="@+id/jenisVoucherLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/white"
                app:endIconDrawable="@drawable/spinnericon"
                app:endIconTint="@color/primaryGreen"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeColor="@color/white">

                <AutoCompleteTextView
                    android:id="@+id/jenisVoucherAutoComplete"
                    android:layout_width="match_parent"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:inputType="none"
                    android:text="Google Play Store"
                    android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Email"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/customInputLayout">
            <com.google.android.material.textfield.TextInputEditText
                style="@style/customEditText"
                android:id="@+id/emailVoucherFisikEditText"
                android:paddingTop="3dp"
                android:textSize="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPulsa2"
        android:layout_below="@id/cardPurchasePaketData"
        style="@style/customLayoutPurchases">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/voucherFisik1ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/voucher1"/>

            <ImageButton
                android:id="@+id/voucherFisik2ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/voucher2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/voucherFisik3ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/voucher3"/>

            <ImageButton
                android:id="@+id/voucherFisik4ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/voucher4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/voucherFisik5ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/voucher5"/>
            <ImageButton
                android:id="@+id/voucherFisik6ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/voucher6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/voucherFisik7ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/voucher7"/>

            <ImageButton
                android:id="@+id/voucherFisik8ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/voucher8"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>