<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGreen"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    tools:context=".ListBankActivity">

    <RelativeLayout
        android:id="@+id/layoutPaketData1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">

        <ImageButton
            android:id="@+id/backListBank"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/iconback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="34dp"
            android:text="List Bank"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle25_0"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/card_view_listbank_placeholder" />
                <include layout="@layout/card_view_listbank_placeholder" />
                <include layout="@layout/card_view_listbank_placeholder" />
                <include layout="@layout/card_view_listbank_placeholder" />
                <include layout="@layout/card_view_listbank_placeholder" />                <include layout="@layout/card_view_listbank_placeholder" />
                <include layout="@layout/card_view_listbank_placeholder" />
                <include layout="@layout/card_view_listbank_placeholder" />                <include layout="@layout/card_view_listbank_placeholder" />                <include layout="@layout/card_view_listbank_placeholder" />
                <include layout="@layout/card_view_listbank_placeholder" />
                <include layout="@layout/card_view_listbank_placeholder" />
                <include layout="@layout/card_view_listbank_placeholder" />

            </LinearLayout>


        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listBankRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="5"
            tools:listitem="@layout/card_view_listbank"/>

    </LinearLayout>

</LinearLayout>