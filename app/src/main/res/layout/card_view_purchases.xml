<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="42dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/purchaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuota 3GB"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/hargaPurchaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Rp40.000"
                android:textSize="35sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/purchaseImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/icon_kuota"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/linePurchaseImageView"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:src="@drawable/linebottom"/>

</RelativeLayout>