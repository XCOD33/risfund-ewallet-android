<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGreen"
    android:paddingHorizontal="25dp"
    tools:context=".Register2Activity">

    <LinearLayout
        android:id="@+id/animationRegister2View"
        style="@style/customAnimasiImage"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/animasi3ImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register2_animation"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Register2Linear"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:paddingHorizontal="30sp"
        android:background="@drawable/rectangle25"
        android:orientation="vertical"
        android:elevation="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/animationRegister2View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Lanjutkan ..."
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Username"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameRegisterInputLayout"
            style="@style/customInputLayout">
            <com.google.android.material.textfield.TextInputEditText
                style="@style/customEditText"
                android:id="@+id/usernameRegisterEditText"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/passwordRegisterTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="Password"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordRegisterInputLayout"
            style="@style/customInputLayoutPassword">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordRegisterEditText"
                style="@style/customEditTextPassword"/>

        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/rePasswordRegisterTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="Ulangi Password"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rePasswordRegisterInputLayout"
            style="@style/customInputLayoutPassword">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rePasswordRegisterEditText"
                style="@style/customEditTextPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    
    <Button
        android:id="@+id/daftarRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Register2Linear"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="Daftar"
        android:textColor="@color/primaryGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@+id/Register2Linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    





</androidx.constraintlayout.widget.ConstraintLayout>