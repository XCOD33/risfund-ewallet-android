<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGreen"
    tools:context=".PaketDataActivity"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:id="@+id/layoutPaketData1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">

        <ImageButton
            android:id="@+id/backPaketData"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/iconback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="34dp"
            android:text="Paket Data"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cardPurchasePaketData"
        style="@style/customCardPurchases"
        android:layout_below="@+id/layoutPaketData1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penyedia Layanan"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/providerPaketDataImageView"
                android:layout_marginTop="3dp"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:src="@drawable/telkomsel"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:id="@+id/providerPaketDataInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/white"
                app:endIconDrawable="@drawable/spinnericon"
                app:endIconTint="@color/primaryGreen"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeColor="@color/white">

                <AutoCompleteTextView
                    android:id="@+id/providerPaketDataAutoComplete"
                    android:layout_width="match_parent"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:inputType="none"
                    android:text="Telkomsel"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/customInputLayout"
            android:paddingTop="3dp">
            <com.google.android.material.textfield.TextInputEditText
                style="@style/customEditText"
                android:paddingTop="3dp"
                android:id="@+id/nomorTeleponPaketDataEditText"
                android:drawableStart="@drawable/_62"
                android:drawablePadding="10dp"
                android:textSize="16dp"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/customLayoutPurchases"
        android:layout_below="@id/cardPurchasePaketData"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/paketDataRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="5"
            tools:listitem="@layout/card_view_purchases" />

    </LinearLayout>

</LinearLayout>