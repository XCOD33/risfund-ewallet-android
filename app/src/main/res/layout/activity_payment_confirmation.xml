<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGreen"
    tools:ignore="HardcodedText"
    tools:context=".PaymentConfirmationActivity">
    
    <LinearLayout
        android:id="@+id/layoutKonfirmasiPembayaran1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/backKonfirmasiPembayaran"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/iconback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginStart="80dp"
            android:text="Konfirmasi Pembayaran"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutKonfirmasiPembayaran2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="53dp"
        android:layout_below="@id/layoutKonfirmasiPembayaran1"
        android:orientation="vertical"
        android:background="@drawable/rectangle15"
        app:layout_constraintTop_toBottomOf="@+id/layoutKonfirmasiPembayaran1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/card_view_confirmation"
            tools:itemCount="7"/>

    </LinearLayout>

    <Button
        android:id="@+id/konfirmasiPembayaranButton"
        style="@style/customButtonWhite"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="25dp"
        android:text="Konfirmasi"
        app:layout_constraintTop_toBottomOf="@+id/layoutKonfirmasiPembayaran2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>