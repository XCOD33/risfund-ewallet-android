<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGreen"
    tools:ignore="HarcodedText"
    android:paddingHorizontal="25dp"
    tools:context=".PurchasesSuccessActivity">

    <LinearLayout
        android:id="@+id/layoutPembayaranSukses1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">>

        <ImageButton
            android:id="@+id/backPembayaranSukses"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/iconback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginStart="85dp"
            android:text="Pembayaran Berhasil"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPembayaranSukses2"
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:layout_marginTop="53dp"
        android:layout_below="@id/layoutPembayaranSukses1"
        android:background="@drawable/rectangle25"
        android:orientation="vertical"
        android:paddingTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutPembayaranSukses1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/transfersucces"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="Pembayaran Berhasil"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/secondaryGreen"/>

        <TextView
            android:id="@+id/PembayaranAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_gravity="center"
            android:text="-Rp123.000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondaryGreen"/>

    </LinearLayout>

    <Button
        android:id="@+id/pembayaranBerhasilButton"
        android:layout_marginTop="36dp"
        android:layout_below="@id/layoutPembayaranSukses2"
        style="@style/customButtonWhite"
        android:text="Lanjutkan"
        app:layout_constraintTop_toBottomOf="@+id/layoutPembayaranSukses2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>