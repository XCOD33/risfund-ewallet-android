<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGreen"
    android:orientation="vertical"
    tools:context=".BpjsConfirmationActivity">

    <RelativeLayout
        android:id="@+id/layoutKonfirmasiPembayaranBpjs1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backKonfirmasiPembayaranBpjs"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/iconback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="34dp"
            android:text="Konfirmasi Pembayaran"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutKonfirmasiPembayaranBpjs2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_below="@id/layoutKonfirmasiPembayaran1"
        android:orientation="vertical"
        android:background="@drawable/rectangle15">

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="25dp"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="No Pelanggan"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/noMemberBpjsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text=""
                android:gravity="right"
                android:textAlignment="gravity"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutConfirmation"
            android:src="@drawable/linebottom"/>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="25dp"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Nama Pelanggan"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nameMemberBpjsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text=""
                android:gravity="right"
                android:textAlignment="gravity"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutConfirmation"
            android:src="@drawable/linebottom"/>

        <LinearLayout
            android:id="@+id/layoutConfirmation"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="25dp"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Periode"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/periodeBpjsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text=""
                android:gravity="right"
                android:textAlignment="gravity"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/linebottom"/>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="25dp"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Jumlah Tagihan"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/amountBpjsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text=""
                android:gravity="right"
                android:textAlignment="gravity"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/linebottom"/>

    </LinearLayout>

    <Button
        android:id="@+id/konfirmasiBpjsButton"
        style="@style/customButtonWhite"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="25dp"
        android:layout_gravity="center"
        android:text="Konfirmasi"/>

</LinearLayout>