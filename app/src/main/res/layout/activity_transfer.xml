<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGreen"
    tools:context=".TransferActivity"
    android:orientation="vertical"
    tools:ignore="HarcodedText">

    <RelativeLayout
        android:id="@+id/layoutTransfer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp">

        <ImageButton
            android:id="@+id/backTransfer"
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/iconback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_centerInParent="true"
            android:text="Transfer"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutTransfer2"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="33dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/layoutTransfer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:paddingTop="20dp"
            android:paddingHorizontal="38dp"
            android:background="@drawable/rectangle25_15"
            android:orientation="horizontal"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usernameTransferTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi, Nama Pengguna"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/saldoTransferTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Saldo"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/balanceTraansferTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Rp123.000"
                    android:textSize="32sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/balanceNotifTransferTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Saldo sisa sedikit"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTransfer3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutTransfer2"
        android:paddingTop="30dp"
        android:paddingHorizontal="37dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/rectangle25_0"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/layoutTransfer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TransferTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer"
                android:textSize="26dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Handphone"
                android:layout_marginTop="25dp"
                android:textSize="14sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/noHandphoneTransferInputLayout"
                style="@style/customInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/customEditText"
                    android:drawableStart="@drawable/_62"
                    android:inputType="number"
                    android:drawablePadding="10dp"
                    android:id="@+id/noHandphoneTransferEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal Transfer"
                android:layout_marginTop="15dp"
                android:textSize="14sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nominalTransferInputLayout"
                style="@style/customInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/customEditText"
                    android:drawableStart="@drawable/rp"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:id="@+id/nominalTransferEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:layout_marginTop="15dp"
                android:textSize="14sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/catatanTransferInputLayout"
                style="@style/customInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/customEditText"
                    android:id="@+id/catatanTransferEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon__note_"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/catatanTransferTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pastikan saldo anda mencukupi"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/transferTransferButton"
            style="@style/customButtonGreen"
            android:layout_below="@+id/catatanTransferTextView"
            android:layout_marginTop="30dp"
            android:elevation="5dp"
            android:text="Transfer" />

    </LinearLayout>

</LinearLayout>
