<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/secondaryGreen</item>
    </style>

    <style name="customEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="customInputLayoutPassword" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/secondaryGreen</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/secondaryGreen</item>
    </style>

    <style name="customEditTextPassword">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="customButtonWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondaryGreen</item>
    </style>

    <style name="customButtonGreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:backgroundTint">@color/secondaryGreen</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="customAnimasiImage">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">121dp</item>
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:background">@drawable/rectangle15</item>
    </style>

    <style name="customSpinner">
        <item name="android:textColor">@color/secondaryGreen</item>
    </style>
    
    <style name="customCardPurchases">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">169dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">19dp</item>
        <item name="android:paddingEnd">19dp</item>
        <item name="android:background">@drawable/rectangle15</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="customLayoutPurchases">
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">513dp</item>
        <item name="android:background">@drawable/rectangle25</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="customNotifMyQR">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/rectangle66</item>
    </style>
</resources>